# Ruuvi Sensor Service Configuration
# Copy this file to .env and customize the values for your environment

# InfluxDB Configuration
INFLUXDB_HOST=192.168.50.107
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your_influxdb_token_here
INFLUXDB_ORG=your_organization_name
INFLUXDB_BUCKET=ruuvi_sensors
INFLUXDB_TIMEOUT=30
INFLUXDB_VERIFY_SSL=true
INFLUXDB_ENABLE_GZIP=true

# BLE Scanner Configuration
BLE_SCAN_TIMEOUT=10.0
BLE_RETRY_ATTEMPTS=3
BLE_RETRY_DELAY=2.0
BLE_SCAN_INTERVAL=20

# Metadata Configuration
METADATA_FILE_PATH=./config/ruuvi_sensors.json
METADATA_BACKUP_COUNT=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_SYSLOG=false

# Service Configuration
SERVICE_BATCH_SIZE=100
SERVICE_FLUSH_INTERVAL=10
SERVICE_MAX_RETRIES=3
SERVICE_RETRY_BACKOFF=2.0
SERVICE_BUFFER_SIZE=10000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_INTERVAL=300

# Virtual Environment Check
VIRTUAL_ENV_REQUIRED=true